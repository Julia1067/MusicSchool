@model MusicSchool.Models.DTO.RegistrationModel

<div class="center-cont-reg">
    <div class="action">РЕЄСТРАЦІЯ</div>
    <form method="post" asp-controller="UserAuthentication" asp-action="Registration" autocomplete="off">
        <div class="form-container">
            <div class="data-container-reg">
                <div class="part1">
                <div class="input-container">
                    <label asp-for="LastName" for="LastName">Прізвище</label>
                    <input type="text" placeholder="Прізвище" asp-for="LastName">
                </div>
                <div class="message-box">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="input-container">
                    <label asp-for="Name" for="Name">Ім'я</label>
                    <input type="text" placeholder="Ім'я" asp-for="Name">
                </div>
                <div class="message-box">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="input-container">
                    <label asp-for="Patronymic" for="Patronymic">По-батькові</label>
                    <input type="text" placeholder="По-батькові" asp-for="Patronymic">
                </div>
                <div class="message-box">
                    <span asp-validation-for="Patronymic"></span>
                </div>
                </div>
                <div class ="part2">
                <div class="input-container">
                    <label asp-for="Email" for="Email">Email</label>
                    <input type="text" placeholder="Email" asp-for="Email">
                </div>
                <div class="message-box">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-container">
                    <label asp-for="Password" for="Password">Пароль</label>
                    <input type="password" placeholder="Password" asp-for="Password">
                </div>
                <div class="message-box">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-container">
                    <label asp-for="PasswordConfirm" for="PasswordConfirm">Підтвердження паролю</label>
                    <input type="password" placeholder="PasswordConfirm" asp-for="PasswordConfirm">
                </div>
                <div class="message-box">
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                </div>
            </div>
            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <span class="text-info">@TempData["msg"]</span>
                </div>
            }
            <div class="button-container">
                <button class="btn-default" type="submit">РЕЄСТРАЦІЯ</button>
            </div>
            <div class="ref">
                <a href="/UserAuthentication/Login">Вхід</a>
            </div>
        </div>
    </form>
</div>

