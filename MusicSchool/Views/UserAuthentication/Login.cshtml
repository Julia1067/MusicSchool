@model MusicSchool.Models.DTO.LoginModel
@{

}
<!DOCTYPE html>
<html lang="en">
	<head>
	    <meta charset="UTF-8">
	    <meta http-equiv="X-UA-Compatible" content="IE=edge">	
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <title>login</title>
    </head>
    <body>
    <form method="post" asp-controller="UserAuthentication" asp-action="Login" autocomplete="off">

        <div class="container">
            <div class="action">ВХІД</div>
            <div class="datacontainer">
                <div class="input-container">
                    <input type="text" placeholder="Логін" asp-for="Email">
                    <label asp-for="Email" for="Username">Логін</label>
                </div>
                <div class="message-box">
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="input-container">
                    <input type="password" placeholder="Пароль" class="input" asp-for="Password">
                    <label asp-for="Password" for="Password">Пароль</label>
                </div>
                <div class="message-box">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            @if (TempData["msg"] != null)
            {
                <div class="form-group">
                    <span class="text-info">@TempData["msg"]</span>
                </div>
            }
            <div class="button-container">
                <button class="btn-default" type="submit">УВІЙТИ</button>
            </div>
            <a class="ref" href="/UserAuthentication/Registration">РЕЄСТРАЦІЯ</a>
        </div>
    </form>
    </body>
</html>