@inject MusicSchool.Repositories.Abstract.IAdminService adminService;

<div class="cont">
    <div class="func-cont">
    <a class="functions" href="/Admin/TeacherListSortedBySalary">Сортувати за зарплатнею</a>

    <a class="functions" href="/Admin/TeacherListSortedByPositions">Сортувати за позицією</a>
    </div>
<table id="list">
    <tr>
        <td>ПІБ</td>
        <td>Позиція</td>
        <td>Дата народження</td>
        <td>Email</td>
        <td>Зарплатня</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @{
        foreach (var item in adminService.GetTeacherList())
        {
            <tr>
                <td>@item.LastName @item.Name @item.Patronymic</td>
                <td>@adminService.GetCurrentPosition(item.Email)</td>
                <td>@item.BirthDay.ToShortDateString()</td>
                <td>@item.Email</td>
                <td>@item.Salary</td>
                <td><a class="functions" href="/Admin/UpdateTeacherInfo?Email=@item.Email">Змінити</a></td>
                <td><a class="functions" href="/Admin/TeacherDelete?Email=@item.Email">Видалити</a></td>
                <td><a class="functions" href="/Admin/TeacherClassSchedule?Id=@item.Id">Переглянуи графік</a></td>
            </tr>
        }
    }
</table>
</div>