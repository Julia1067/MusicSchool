@inject MusicSchool.Repositories.Abstract.IAdminService adminService;

<div class="cont">
    <a class="functions" href="/Admin/StudentListSortedByGroups">Сортувати за групою</a>
<table id="list">
    <tr>
        <td>ПІБ</td>
        <td>Група</td>
        <td>Дата народження</td>
        <td>Email</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    @{
        foreach (var item in adminService.GetStudentList())
        {
            <tr>
                @*<td>@item.LastName</td>*@
                <td>@item.LastName @item.Name @item.Patronymic</td>
                <td>@adminService.GetCurrentGroup(item.Email)</td>
                <td>@item.BirthDay.ToShortDateString()</td>
                <td>@item.Email</td>

                <td><a class="functions" href="/Admin/UpdateStudentInfo?Email=@item.Email">Змінити</a></td>
                <td><a class="functions" href="/Admin/StudentDelete?Email=@item.Email">Видалити</a></td>
                <td><a class="functions" href="/Admin/StudentClassSchedule?Id=@item.Id">Переглянуи графік</a></td>
            </tr>
        }
    }
</table>
</div>
